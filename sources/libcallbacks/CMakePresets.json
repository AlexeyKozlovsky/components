{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "LIB_BUILD_TESTS": "OFF",
        "LIB_BUILD_EXAMPLES": "ON",
        "LIB_INSTALL": "ON",
        "LIB_SHARED_LIBS": "OFF",
        "CMAKE_DEBUG_POSTFIX": "d",
        "CMAKE_AUTOMOC": "ON"
      }
    },
    {
      "name": "dev-win-release",
      "description": "Base preset for library developers",
      "hidden": true,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON",
        "CMAKE_CXX_FLAGS": "/EHs"
      }
    },
    {
      "name": "dev-win-debug",
      "description": "Base preset for library developers",
      "hidden": true,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON",
        "CMAKE_CXX_FLAGS": "/EHs"
      }
    },
    {
      "name": "dev-win-release-static",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build-release",
      "hidden": false,
      "inherits": ["dev-win-release"],
      "cacheVariables": {
        "LIB_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "dev-win-debug-static",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build",
      "hidden": false,
      "inherits": ["dev-win-debug"],
      "cacheVariables": {
        "LIB_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "dev-win-release-dll",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build-release-dll",
      "hidden": false,
      "inherits": ["dev-win-release"],
      "cacheVariables": {
        "LIB_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "dev-win-debug-dll",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build-dll",
      "hidden": false,
      "inherits": ["dev-win-debug"],
      "cacheVariables": {
        "LIB_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "dev-linux",
      "description": "Linux preset for library developers",
      "hidden": true,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wshadow -Wconversion -Wsign-conversion -Wcast-align -Wcast-qual -Wnull-dereference -Woverloaded-virtual -Wformat=2 -Werror"
      }
    }
  ]
}
