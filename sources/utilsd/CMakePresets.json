{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "UTILS_BUILD_TESTS": "OFF",
        "UTILS_BUILD_EXAMPLES": "OFF",
        "UTILS_INSTALL": "ON",
        "UTILS_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "dev-win",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build",
      "hidden": false,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/EHs",
        "UTILS_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "dev-win-dll",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build-dll",
      "hidden": false,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/EHs",
        "UTILS_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "dev-linux",
      "description": "Linux preset for library developers",
      "hidden": true,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wshadow -Wconversion -Wsign-conversion -Wcast-align -Wcast-qual -Wnull-dereference -Woverloaded-virtual -Wformat=2 -Werror"
      }
    }
  ]
}
